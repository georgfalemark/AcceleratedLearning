<Window x:Class="LayoutWithCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutWithCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Canvas>
        <Rectangle 
            Fill="Red"
            Height="40"
            Width="50"
            Canvas.Left="25"
            Canvas.Top="25"/>
        <Rectangle 
            Fill="Yellow"
            Height="40"
            Width="50"
            Canvas.Left="100"
            Canvas.Top="25"/>
        <Rectangle 
            Fill="Gray"
            Height="40"
            Width="50"
            Canvas.Left="110"
            Canvas.Top="35"/>

        <Rectangle 
            Fill="Green"
            Height="40"
            Width="50"
            Canvas.Left="190"
            Canvas.Top="35"/>
        

    </Canvas>
    
    
</Window>
