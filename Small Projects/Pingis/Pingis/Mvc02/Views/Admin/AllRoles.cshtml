@model AddRoleVm
<h1>All existing roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
    @foreach(string role in Model.roles)
    {
        <tr>
            <td>
                @role
            </td>
            <td>
                <a asp-controller="Admin" asp-action="GetUsersInRole" asp-route-role="@role">Link to users</a>
            </td>
            <td>
                <a asp-controller="Admin" asp-action="Delete" asp-route-role="@role">Delete</a>
            </td>
        </tr>

    }
    </tbody>


</table>