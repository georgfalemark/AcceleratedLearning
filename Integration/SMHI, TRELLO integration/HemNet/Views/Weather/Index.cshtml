@model WeatherVm

<h1>VÄDER</h1>

<form asp-action="ShowWeather">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Latitude" class="control-label"></label>
        <input asp-for="Latitude" class="form-control" value="" />
        <span asp-validation-for="Latitude" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Longitude" class="control-label"></label>
        <input asp-for="Longitude" class="form-control" value="" />
        <span asp-validation-for="Longitude" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>

</form>

@if (Model.TimeTemps != null)
{
    <ul>
        <li>Tid | Temp</li>
        @foreach (var item in Model.TimeTemps)
        {
            <li>@item.Time | @item.Temp C</li>
        }
    </ul>
}
